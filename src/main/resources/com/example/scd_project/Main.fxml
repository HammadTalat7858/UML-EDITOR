<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scd_project.MainController">

    <!-- Tool Panel on the left -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #E0E0E0;">
            <Button fx:id="classButton" onAction="#handleClassButtonAction" prefHeight="26.0" prefWidth="117.0" text="Create Class" />
            <Button fx:id="relationshipButton" onAction="#handleRelationshipButtonAction" text="Create Relationship" />
        </VBox>
    </left>

    <!-- Center panel for the Diagram Canvas -->
    <center>
        <Pane fx:id="diagramCanvas" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0.5, 5, 5); -fx-border-color: black; -fx-border-width: 1;" />
    </center>

    <!-- Right panel for Properties -->
    <right>
        <VBox fx:id="propertiesPanel" spacing="10" style="-fx-padding: 10; -fx-background-color: #F0F0F0;">
            <Label text="Class Name:" />
            <TextField fx:id="classNameField" />
            <Label text="Attributes:" />
            <TextArea fx:id="attributesArea" promptText="Enter attributes (e.g., int id, String name)" />
            <Button fx:id="addAttributeButton" onAction="#handleAddAttribute" text="Add Attribute" />
            <Label text="Operations:" />
            <TextArea fx:id="operationsArea" promptText="Enter operations (e.g., void setId(int id))" />
            <Button fx:id="addOperationButton" onAction="#handleAddOperation" text="Add Operation" />
        </VBox>
    </right>
</BorderPane>
